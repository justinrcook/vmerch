// Bootstrap Variables
// -------------------------

// Vmerch
// -------------------------
$font-family-lato: 				Lato, "Helvetica Neue", Helvetica, Arial, sans-serif;
$font-family-lato-light:	"Lato Light", "Helvetica Neue", Helvetica, Arial, sans-serif;

// Brand colors
// -------------------------
$brand-primary:         #4e3127;
$brand-light:		        #b8ada9;
$brand-bg:							#f2efed;
$brand-alternate:				#00c5c0;
$brand-text-color:			#5E5F60;
$link-color:						$brand-alternate;

// Scaffolding
// -------------------------
$body-bg:               $brand-bg;
$text-color:            $brand-text-color;

// Typography
// -------------------------
$font-family-base:  $font-family-lato;
$font-size-base: 16px !default;

// Navbar
// -------------------------
$navbar-border-radius: 0;

// Thumbnail
// -------------------------
$thumbnail-bg: #fff;

// Alerts
// -------------------------
.alert-error {
	@extend .alert-danger;
}

// Boostrap
// - import here so we have access to all the variables and mixins and
// - so that the variables get set to overwrite the bootstrap defaults
@import "bootstrap";

body, .panel {
	background-color: $body-bg;
}

header.jumbotron {
	background: url("//assets.vmerch.me/images/header-bg-v2.jpg") center no-repeat;
	background-size: cover;
	min-height: 220px;
	margin-bottom: 0;
		a {
			img {
				padding-top: 20px;
				margin: 0 auto;
			}
		}

	h1 {
		margin: 0;
	}
}

/* Small devices (tablets, 768px and up) */
@media (min-width: $screen-sm) {
	header.jumbotron {
		min-height: 320px;
	}
}

/* Medium devices (desktops, 992px and up) */
@media (min-width: $screen-md) {
	header.jumbotron {
		min-height: 420px;
	}
}

nav.navbar-default {
	border-top: 4px solid $brand-primary;
	border-width: 4px 0 1px 0;
	font-size: $font-size-large;

	&.stuck {
		@extend .navbar-fixed-top;
		border-top: 4px solid $brand-primary;
	}

	li.active {
		font-color: $brand-light;
	}
}

// Headers
// -------------------------
.page-header {
	margin: ($line-height-computed / 2) 0;
	border-bottom: 1px solid $brand-light;
	padding-bottom: 0;

	h2 {
		margin-bottom: 5px;
	}
}

h1,h2,h3,h4,h5,h6 {
	font-family:  $font-family-lato-light;
	font-weight: 300;
	color: $brand-primary;
}

// Profile Photo
// -------------------------
img.profile-photo {
	border: 1px solid $brand-light;
}

// New Email (Contact Form)
// -------------------------
.new_email {
	// All straight corners here
	input, textarea {
		border-radius: 0;
	}

	input.btn {
		@include button-variant(#fff, $brand-alternate, $brand-alternate);
		text-align: left;
		padding-left: $line-height-computed;
	}
}

// Shoutout (Contact Page)
// -------------------------
ul.shoutout {
	li {
		font-size: $font-size-large;


		padding: 10px 0;
		padding-left: 45px;
		background: center left no-repeat;

		&.hello { background-image: url("//assets.vmerch.me/images/email.png"); }
		&.endorsements { background-image: url("//assets.vmerch.me/images/linkedIn.png"); }
		&.tweet { background-image: url("//assets.vmerch.me/images/twitter.png"); }
	}
}

footer {
	background: url("//assets.vmerch.me/images/footer-bg.jpg");
	padding: 40px 0;

	li {
		border-right: 1px solid;
		&:last-child {
			border: none;
		}
	}

	a {
		color: $brand-primary;
		font-size: ($font-size-base * 1.1);
	}
}

// Two column design layout
// -------------------------
.column 		{ float: left;	}
.size-1of1	{ width: 100%;	}
.size-1of2	{ width: 50%;		}

@media screen and (max-width: 768px) {
	.two_column[data-columns]::before {
		content: '1 .column.size-1of1';
	}
}

@media screen and (min-width: 769px) {
	.two_column[data-columns]::before {
		content: '2 .column.size-1of2';
	}

	.two_column {
		.size-1of2:first-child {
			.thumbnail { margin-right: 5px; }
		}
		.size-1of2:last-child {
			.thumbnail { margin-left: 5px; }
		}

	}
}

