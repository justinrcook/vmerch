- title @category.name

- if @category.single_column?
	= render @category.designs
- elsif @category.two_column?
	.two_column{ data: { columns: true } }
		- @category.designs.each do |design|
			= render design

- if user_signed_in?
	%p
		= link_to 'Edit category', edit_category_path(@category), class: 'btn btn-primary'
		= link_to 'Destroy', @category, method: :delete, class: 'btn btn-danger',
			data: { confirm: 'Are you sure?' }
